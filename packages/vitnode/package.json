{
  "name": "vitnode",
  "version": "0.2.0",
  "devDependencies": {
    "@hono/swagger-ui": "^0.5.0",
    "@hono/zod-openapi": "^0.18.4",
    "@hookform/resolvers": "^4.1.0",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.18",
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "chokidar": "^4.0.3",
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.30.4",
    "drizzle-orm": "^0.39.3",
    "eslint": "^9.20.1",
    "hono": "^4.7.2",
    "lucide-react": "^0.475.0",
    "next": "^15.1.7",
    "next-intl": "4.0.0-beta-ca3fcd5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "sonner": "^1.7.4",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "zod": "^3.24.2"
  },
  "bin": {
    "vitnode": "./dist/scripts/scripts.cjs"
  },
  "exports": {
    "./api/config": {
      "import": "./dist/src/api/config.js",
      "types": "./dist/src/api/config.d.ts",
      "default": "./dist/src/api/config.js"
    },
    "./*": {
      "import": "./dist/src/*.js",
      "types": "./dist/src/*.d.ts",
      "default": "./dist/src/*.js"
    },
    "./config/next.config": "./config/next.config.ts"
  },
  "scripts": {
    "build:scripts": "tsup",
    "start:scripts": "bun ./dist/scripts/scripts.js",
    "build": "tsc && swc src -d dist --config-file .swcrc",
    "dev": "concurrently \"tsc -w --preserveWatchOutput\" \"swc src -d dist --config-file .swcrc -w\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "type": "module",
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.1.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "jose": "^5.10.0",
    "next-themes": "^0.4.4",
    "postgres": "^3.4.5",
    "tailwind-merge": "^3.0.1",
    "vaul": "^1.1.2"
  }
}
