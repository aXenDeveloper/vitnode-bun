{
  "name": "vitnode",
  "version": "0.2.0",
  "devDependencies": {
    "@hono/swagger-ui": "^0.5.0",
    "@hono/zod-openapi": "^0.18.3",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.9",
    "@types/node": "^22.10.9",
    "@types/pg": "^8.11.10",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "chokidar": "^4.0.3",
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.30.2",
    "drizzle-orm": "^0.38.4",
    "hono": "^4.6.18",
    "lucide-react": "^0.474.0",
    "next": "^15.1.6",
    "pg": "^8.13.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.7.3"
  },
  "bin": {
    "vitnode": "./dist/scripts/scripts.js"
  },
  "exports": {
    "./api/config": {
      "import": "./dist/src/api/config.js",
      "default": "./dist/src/api/config.js",
      "types": "./dist/src/api/config.d.ts"
    },
    "./*": {
      "import": "./dist/src/*.js",
      "default": "./dist/src/*.js",
      "types": "./dist/src/*.d.ts"
    },
    "./config/next.config": "./config/next.config.ts"
  },
  "scripts": {
    "build:scripts": "swc scripts -d dist --config-file .swcrc",
    "start:scripts": "bun ./dist/scripts/index.js",
    "build": "tsc && swc src -d dist --config-file .swcrc",
    "dev": "concurrently \"tsc -w --preserveWatchOutput\" \"swc src -d dist --config-file .swcrc -w\""
  },
  "type": "module",
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.5",
    "@radix-ui/react-slot": "^1.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "next-themes": "^0.4.4",
    "tailwind-merge": "^2.6.0"
  }
}
