{
  "name": "vitnode-bun",
  "private": true,
  "scripts": {
    "db:migrate": "turbo db:migrate",
    "docker": "docker compose -f ./docker-compose.yml -p vitnode-dev-dun up -d",
    "build:scripts": "turbo build:scripts && pnpm i",
    "build": "turbo build",
    "start": "turbo start",
    "dev": "pnpm build:scripts && turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@9.15.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
