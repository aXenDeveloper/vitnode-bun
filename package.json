{
  "name": "vitnode-bun",
  "private": true,
  "scripts": {
    "db:migrate": "turbo db:migrate",
    "docker": "docker compose -f ./docker-compose.yml -p vitnode-dev-dun up -d",
    "build:scripts": "turbo build:scripts && pnpm i",
    "build": "turbo build",
    "start": "turbo start",
    "dev": "pnpm build:scripts && turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint-config-typescript-vitnode": "workspace:*",
    "prettier": "^3.5.1",
    "turbo": "^2.4.2",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.2.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
